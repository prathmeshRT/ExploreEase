<% layout('/layouts/boilerPlate') %>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listings</h3>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" enctype="multipart/form-data" novalidate class="needs-validation">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input type="text" class="form-control" name="listing[title]" required value="<%= listing.title %>">
                    <div class="valid-feedback">
                        Title Looks good!
                      </div>
                </div>
                
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" required class="form-control"><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        Please Enter a Short Description.
                      </div>
                </div>

                <div class="mb-3">
                    Original Image <br>
                    <img src="<%= originalImageUrl %>" alt="">
                </div>
                
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload New Image</lable>
                    <input type="file" class="form-control" name="listing[image]">
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input type="number" class="form-control" name="listing[price]" required value="<%= listing.price %>">
                        <div class="invalid-feedback">
                            Please Enter a Valid Price.
                          </div>
                    </div>
                    
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input type="text" class="form-control" name="listing[country]" required value="<%= listing.country %>">
                        <div class="invalid-feedback">
                            Country name should be valid.
                          </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input type="text" class="form-control"  name="listing[location]" required value="<%= listing.location %>">
                    <div class="invalid-feedback">
                        Location should be valid.
                      </div>
                </div>
                
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
</body>