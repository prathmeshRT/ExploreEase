<% layout("/layouts/boilerPlate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
            <h3>Create new Listings</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input type="text" class="form-control" name="listing[title]" required placeholder="Add a catchy title">
                    <div class="valid-feedback">
                        Title Looks good!
                      </div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" class="form-control" required placeholder="Enter description"></textarea>
                    <div class="invalid-feedback">
                        Please Enter a Short Description.
                      </div>
                </div>
        
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Listing Image</lable>
                    <input type="file" class="form-control" name="listing[image]" required>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-4" >
                        <lable for="price" class="form-label">Price</lable>
                        <input class="form-control" name="listing[price]" required placeholder="1200">
                        <div class="invalid-feedback">
                            Please Enter a Valid Price.
                          </div>
                    </div>
    
                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>
                        <input type="text" class="form-control" name="listing[country]" required placeholder="India">
                        <div class="invalid-feedback">
                            Country name should be valid.
                          </div>
                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input type="text" class="form-control" name="listing[location]" required placeholder="Jaipur, Rajasthan">
                    <div class="invalid-feedback">
                        Location should be valid.
                      </div>
                </div>
                
                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>
    
</body>